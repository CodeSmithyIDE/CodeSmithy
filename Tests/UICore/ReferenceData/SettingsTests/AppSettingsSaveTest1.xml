<?xml version="1.0"?>
<codesmithy-application-settings>
	<file-format-version>0.1.0</file-format-version>
	<file-type-associations>
		<file-type-association>
			<document-type-name>Bakefile</document-type-name>
			<association>open</association>
			<action-type>project-type</action-type>
			<associated-project-type-name>CodeSmithy.Bakefile</associated-project-type-name>
		</file-type-association>
	</file-type-associations>
	<startup-settings>
		<initial-size>
			<initial-size-type>fixed-size</initial-size-type>
			<width>800</width>
			<height>600</height>
		</initial-size>
	</startup-settings>
	<editor-settings>
		<default-editor-settings>
			<theme-name>CodeSmithy Light Theme</theme-name>
			<override-theme>false</override-theme>
			<font-settings>
				<font-face-name>Courier New</font-face-name>
				<font-point-size>10</font-point-size>
			</font-settings>
		</default-editor-settings>
		<bakefile-editor-settings>
			<use-default-settings>true</use-default-settings>
			<theme-name>CodeSmithy Light Theme</theme-name>
			<override-theme>false</override-theme>
			<font-settings>
				<font-face-name>Courier New</font-face-name>
				<font-point-size>10</font-point-size>
			</font-settings>
		</bakefile-editor-settings>
		<cmakelists-editor-settings>
			<use-default-settings>true</use-default-settings>
			<theme-name>CodeSmithy Light Theme</theme-name>
			<override-theme>false</override-theme>
			<font-settings>
				<font-face-name>Courier New</font-face-name>
				<font-point-size>10</font-point-size>
			</font-settings>
		</cmakelists-editor-settings>
		<cpp-editor-settings>
			<use-default-settings>true</use-default-settings>
			<theme-name>CodeSmithy Light Theme</theme-name>
			<override-theme>false</override-theme>
			<font-settings>
				<font-face-name>Courier New</font-face-name>
				<font-point-size>10</font-point-size>
			</font-settings>
			<styles>
				<style>
					<id>comment</id>
					<text-color>0</text-color>
				</style>
			</styles>
		</cpp-editor-settings>
		<xml-editor-settings>
			<use-default-settings>true</use-default-settings>
			<theme-name>CodeSmithy Light Theme</theme-name>
			<override-theme>false</override-theme>
			<font-settings>
				<font-face-name>Courier New</font-face-name>
				<font-point-size>10</font-point-size>
			</font-settings>
			<styles>
				<style>
					<id>element-name</id>
					<text-color>0</text-color>
				</style>
				<style>
					<id>comment</id>
					<text-color>0</text-color>
				</style>
			</styles>
		</xml-editor-settings>
	</editor-settings>
</codesmithy-application-settings>
